<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
   app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MurajaahFragment" android:background="@drawable/bag_background1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/tiga"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Falaq (Waktu Subuh)"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/dua"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="An-Nas (Umat Manusia)"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/satu"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Fatihah (Pembukaan)"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/enam"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="An-Nasr (Pertolongan)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/lima"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Lahab (Gejolak Api (Sabut))"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/empat"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Ikhlas (Ikhlas)"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/sembilan"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Ma'un (Barang yang Berguna)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/delapan"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Kautsar (Nikmat Berlimpah)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tujuh"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Kafirun (Orang-Orang Kafir)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/duabelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Humazah (Pengumpat)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sebelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Fil (Gajah)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sepuluh"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Quraisy (Suku Quraisy)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/limabelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Qari'ah (Hari Kiamat)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/empatbelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="At-Takatsur (Bermegah-Megahan)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tigabelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-'Asr (Waktu Sore)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/delapanbelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Bayyinah (Pembuktian)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tujuhbelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Az-Zalzalah (Kegoncangan)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/enambelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Adiyat (Berlari Kencang)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center">

                <Button
                    android:id="@+id/duasatu"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="At-Tin (Buah Tin)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/duapuluh"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-'Alaq (Segumpal Darah)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sembilanbelas"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/req_btn_home"
                    android:text="Al-Qadr (Kemuliaan)"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
            </TableRow>





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>